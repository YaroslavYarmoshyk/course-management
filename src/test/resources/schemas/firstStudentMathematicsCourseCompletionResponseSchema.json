{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "courseCode": {
      "type": "integer"
    },
    "subject": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "courseMark": {
      "type": "object",
      "properties": {
        "lessonMarks": {
          "type": "object",
          "properties": {
            "1": {
              "type": "number"
            },
            "2": {
              "type": "number"
            },
            "3": {
              "type": "number"
            },
            "4": {
              "type": "number"
            },
            "5": {
              "type": "number"
            }
          },
          "required": [
            "1",
            "2",
            "3",
            "4",
            "5"
          ]
        },
        "markValue": {
          "type": "number"
        },
        "mark": {
          "type": "string"
        }
      },
      "required": [
        "lessonMarks",
        "markValue",
        "mark"
      ]
    },
    "courseFeedback": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "instructorId": {
              "type": "integer"
            },
            "feedback": {
              "type": "string"
            },
            "feedbackSubmissionDate": {
              "type": "string"
            }
          },
          "required": [
            "instructorId",
            "feedback",
            "feedbackSubmissionDate"
          ]
        },
        {
          "type": "object",
          "properties": {
            "instructorId": {
              "type": "integer"
            },
            "feedback": {
              "type": "string"
            },
            "feedbackSubmissionDate": {
              "type": "string"
            }
          },
          "required": [
            "instructorId",
            "feedback",
            "feedbackSubmissionDate"
          ]
        }
      ]
    },
    "status": {
      "type": "string"
    },
    "enrollmentDate": {
      "type": "string"
    },
    "accomplishmentDate": {
      "type": "string"
    }
  },
  "required": [
    "courseCode",
    "subject",
    "description",
    "courseMark",
    "courseFeedback",
    "status",
    "enrollmentDate",
    "accomplishmentDate"
  ]
}
